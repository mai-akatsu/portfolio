<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script src="https://kit.fontawesome.com/af2ea3bb76.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <%= link_to("app","/")%>
      </div>
      <ul class="header-menus">
        <% current_user = User.find_by(id: session[:user_id]) %>
        <% if current_user %>
          <li><%= link_to(current_user.name, "/users/#{current_user.id}") %></li>
          <li><%= link_to("投稿一覧", "/posts/index") %></li>
          <li><%= link_to("新規投稿", "/posts/new") %></li>
          <li><%= link_to("ログアウト", "/logout", data: { "turbo-method": :post }) %></li>
          <li><%= link_to("ユーザー一覧", "/users/index") %></li>
        <% else %>
          <li><%= link_to("appについて", "/about") %></li>
          <li><%= link_to("新規登録", "/signup") %></li>
          <li><%= link_to("ログイン", "/login") %></li>
        <% end %>
      </ul>
    </header>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice]%>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
